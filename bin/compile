#!/usr/bin/env bash
# bin/detect <build-dir> <cache-dir>

BUILD_DIR=$1
CACHE_DIR=$2

export LIBRARY_PATH=$BUILD_DIR/.lib

mkdir -p $CACHE_DIR
mkdir -p $LIBRARY_PATH

cd $CACHE_DIR
if [ ! -f bin/cmake ]; then
    echo "-----> installing cmake"
    if [ ! -f cmake.tar.gz ]; then
        curl https://s3.amazonaws.com/mergeguard/cmake.tar.gz -s -O
    fi
    tar -xf cmake.tar.gz
fi

cd $CACHE_DIR
if [ ! -d libwebsockets ]; then
    echo "-----> installing libwebsockets"
    git clone git://git.libwebsockets.org/libwebsockets
    cd libwebsockets
    ../bin/cmake .
    make
fi

cd $CACHE_DIR
if [ ! -d json ]; then
    echo "-----> installing json-c"
    git clone git://github.com/json-c/json-c json
    cd json
    sh autogen.sh
    ./configure
    make
fi

echo "-----> preparing .lib"
cd $CACHE_DIR
for src in libwebsockets/lib/*.so*; do
    cp $src $LIBRARY_PATH/$(basename $src)
done
for src in json/.libs/*.so*; do
    dest=$LIBRARY_PATH/$(basename $src)
    cp $src $dest
    ln $dest $(echo $dest | sed -e 's/-c//') # Alias libjson-c to libjson
done

export C_INCLUDE_PATH=$CACHE_DIR:$CACHE_DIR/libwebsockets:$CACHE_DIR/libwebsockets/lib

echo "-----> installing DotBot"
cd $BUILD_DIR
make || exit 1
